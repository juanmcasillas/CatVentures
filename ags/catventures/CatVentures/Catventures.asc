void CatVentures::EnablePlayersGUI() { this.playersGUIEnabled = true; }
void CatVentures::DisablePlayersGUI() { this.playersGUIEnabled = false; }

static void CatVentures::Init () {

   for (int i=0; i< CAT_NUM_PLAYERS; i++) {
     CatPlayers[i].disabled_icon = CAT_DISABLED_ICON;
     CatPlayers[i].added = false;
   }
   
   // Firulais
   CatPlayers[CAT_PLAYER1_ID].normal_view[0] = 3;
   CatPlayers[CAT_PLAYER1_ID].idle_view[0] = 4;
   CatPlayers[CAT_PLAYER1_ID].enabled_icon = CAT_FIRULAIS_ICON;
   CatPlayers[CAT_PLAYER1_ID].button = btnPlayer1;
   CatPlayers[CAT_PLAYER1_ID].character = cFirulais;
   
   // pull view (walk reversal)
   CatPlayers[CAT_PLAYER1_ID].normal_view[1] = 18;
   
   
   // Calcetines
   CatPlayers[CAT_PLAYER2_ID].normal_view[0] = 1;
   CatPlayers[CAT_PLAYER2_ID].idle_view[0] = 2;
   CatPlayers[CAT_PLAYER2_ID].enabled_icon = CAT_CALCETINES_ICON;
   CatPlayers[CAT_PLAYER2_ID].button = btnPlayer2;
   CatPlayers[CAT_PLAYER2_ID].character = cCalcetines;
   
   // Miki
   CatPlayers[CAT_PLAYER3_ID].normal_view[0] = 14;
   CatPlayers[CAT_PLAYER3_ID].idle_view[0] = 15;
   CatPlayers[CAT_PLAYER3_ID].enabled_icon = CAT_MIKI_ICON;
   CatPlayers[CAT_PLAYER3_ID].button = btnPlayer3;
   CatPlayers[CAT_PLAYER3_ID].character  = cMiki;
   
   // Trufa
   CatPlayers[CAT_PLAYER4_ID].normal_view[0] = 10;
   CatPlayers[CAT_PLAYER4_ID].idle_view[0] = 11;
   CatPlayers[CAT_PLAYER4_ID].enabled_icon = CAT_TRUFA_ICON;
   CatPlayers[CAT_PLAYER4_ID].button = btnPlayer4;
   CatPlayers[CAT_PLAYER4_ID].character  = cTrufa;


   // game starts with PLAYER_1 so:
   // set the status icon
   // set the views (idle all except 1, normal)

   for (int i=0; i< CAT_NUM_PLAYERS; i++) {
      CatPlayers[i].button.NormalGraphic = CatPlayers[i].disabled_icon;
      CatPlayers[i].button.Visible = false;
      CatPlayers[i].character.ChangeView(CatPlayers[i].idle_view[0]); // maybe random TODO
      CatPlayers[i].character.Clickable = true;
   }
   
   // PLAYER_1
   int char_id = CAT_PLAYER1_ID;
   CatPlayers[char_id].character.ChangeView(CatPlayers[char_id].normal_view[0]); 
   CatPlayers[char_id].character.Clickable = false;
   CatPlayers[char_id].button.Visible = true;
   CatPlayers[char_id].added = true;
   
   // Game State
   CatGame.EnablePlayersGUI();
   CatGame.playersRunning = 1; 
   
   // MISC INITs
  
  gPlayers.Visible=false;
  cMonkey.Transparency=100;

  // the rat in room5 (map)
  cRat.ManualScaling=true;
  cRat.SetIdleView(CAT_RAT_IDLE_VIEW, 0);
  cRat.Scaling=50;
 
 
  // for the intro
  #ifndef CAT_NOINTRO
    Verbs.DisableGui();  // upper right "settings" icon
    gMain.Visible = false; // verbs
    mouse.Visible = false;
    gPlayers.Visible = false; // upper left "cat switch" icon
    CatPlayers[char_id].character.Transparency = 100; // invisible
    CatGame.DisablePlayersGUI(); // the Cat guis
  #endif
    CatGame.GAME_STATE = 0;
  
 }




 int CatVentures::PlayerToID(String Player) {
   if (Player == CAT_PLAYER1_NAME)   return(CAT_PLAYER1_ID);
   if (Player == CAT_PLAYER2_NAME)   return(CAT_PLAYER2_ID);
   if (Player == CAT_PLAYER3_NAME)   return(CAT_PLAYER3_ID);
   if (Player == CAT_PLAYER4_NAME)   return(CAT_PLAYER4_ID);
   return(-1);
}

void CatVentures::AddPlayer(int playerID) {
  
  if (CatPlayers[playerID].added) {
    #ifdef CAT_DEBUG
    Display("Trying to add player %d twice. ¿bug?",playerID);
    #endif
    return;
  }
  CatGame.playersRunning++;
  CatPlayers[playerID].button.NormalGraphic = CatPlayers[playerID].enabled_icon;
  CatPlayers[playerID].button.Visible = true;
  CatPlayers[playerID].added = true;
}

void CatVentures::SetNormalView(Character *c, int view) {
  int char_id = this.PlayerToID(c.Name);
  CatPlayers[char_id].character.ChangeView(  CatPlayers[char_id].normal_view[view] );
}


void CatVentures::SetIdleView(Character *c, int view) {
  int char_id = this.PlayerToID(c.Name);
  CatPlayers[char_id].character.ChangeView(  CatPlayers[char_id].idle_view[view] );
}


void CatVentures::ChangePlayer (Character *c) {

   if (player.Name == c.Name) {
      return;
   }

   int player_id = this.PlayerToID(player.Name);
   int char_id = this.PlayerToID(c.Name);

  if (!CatPlayers[char_id].added) {
    return;
  }

   // this is relative to what buttons are working and so on
   CatPlayers[char_id].button.NormalGraphic = CatPlayers[char_id].disabled_icon;
   CatPlayers[player_id].button.NormalGraphic = CatPlayers[player_id].enabled_icon;

   CatPlayers[player_id].character.ChangeView( CatPlayers[player_id].idle_view[0] );
   CatPlayers[char_id].character.ChangeView(  CatPlayers[char_id].normal_view[0] );
   
   CatPlayers[player_id].character.Clickable = true;
   CatPlayers[char_id].character.Clickable = false;
   

   //player.ChangeView(player.IdleView);
   // Display("Player view: %d", player.IdleView);
   c.SetAsPlayer ();
   //player.ChangeView(player.NormalView);
}

int CatVentures::GoToLookAt(String message) {
  // goto hotspot location if CATGAME_GOTOLOOKAT is defined.
  // say the thing. Do that to avoid look at things from the "distance"
  int arrives = 1;
  #ifdef CATGAME_GOTOLOOKAT
    arrives = Verbs.GoTo();
  #endif
    if (arrives) { 
      player.Say(message);
    }
  return arrives;
}

















//===================================================================
// int PrevKey;
function on_key_press (int keycode) {
   //
   // This  event  is triggered whenever a keyboard key is pressed.  The
   // parameter  KEYCODE identifies which key was pressed.  All possible
   // keycodes are given below.  See the AGS manual for more details.
   //
   // KEYCODE   DESCRIPTION         KEYCODE   DESCRIPTION  
   // 1..26     Ctrl+A .. Ctrl+Z    8         Backspace (Ctrl+H)
   // 9         Tab (Ctrl+I)        13        Enter (Ctrl+M)
   // 27        Escape              32        Space
   // 48..57   '0' .. '9'           65..90   'A' .. 'Z' (uppercase)
   // 359..368  F1 .. F10           371       Home (numeric pad)
   // 372       Up arrow            373       PgUp (numeric pad)
   // 375       Left arrow          376      '5'   (numeric pad)
   // 377       Right arrow         379       End  (numeric pad)
   // 380       Down arrow          381       PgDn (numeric pad)
   // 433..434  F11 .. F12         
   //-------------------------------------------------------------------
  
  if (keycode == eKey1)  CatGame.ChangePlayer(cFirulais);
  if (keycode == eKey2)  CatGame.ChangePlayer(cCalcetines);
  if (keycode == eKey3)  CatGame.ChangePlayer(cMiki);
  if (keycode == eKey4)  CatGame.ChangePlayer(cTrufa);
  
  #ifdef CAT_DEBUG 
  if (keycode == eKeyCtrlI)  {
    Display("Giving all the players");
    CatGame.AddPlayer(CAT_PLAYER2_ID);
    CatGame.AddPlayer(CAT_PLAYER3_ID);
    CatGame.AddPlayer(CAT_PLAYER4_ID);
    player.ChangeRoom(2);
  }
  #endif
}